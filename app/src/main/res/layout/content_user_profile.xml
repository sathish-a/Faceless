<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Image-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#FFF"
                app:civ_border_width="0dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/UsrImg"/>
        </RelativeLayout>

        <!--Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <ImageView
                android:id="@+id/ivContactItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_info_details" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/UsrprfNameL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ivContactItem4"
                android:layout_toEndOf="@+id/ivContactItem4">

                <EditText
                    android:id="@+id/UsrprfName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Name"
                    android:enabled="false"
                    tools:ignore="HardcodedText"
                    android:textColor="#212121"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
        <include layout="@layout/item_divider" />

        <!--Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"
            >

            <ImageView
                android:id="@+id/ivContactItem6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_dialog_email" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/UsrprfEmailL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ivContactItem6"
                android:layout_toEndOf="@+id/ivContactItem6">

                <EditText
                    android:id="@+id/UsrprfEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email"
                    android:enabled="false"
                    tools:ignore="HardcodedText"
                    android:textColor="#212121"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
        <include layout="@layout/item_divider" />

        <!--Phone no-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/ivContactItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_call" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/UsrprfPhL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ivContactItem1"
                android:layout_toEndOf="@+id/ivContactItem1">

                <EditText
                    android:id="@+id/UsrprfPh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Phone"
                    android:enabled="false"
                    tools:ignore="HardcodedText"
                    android:textColor="#212121"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="textPhonetic|phone" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>



        <include layout="@layout/item_divider" />
        <!--Address-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/ivContactItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_mapmode" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/UsrprfAddrL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ivContactItem2"
                android:layout_toEndOf="@+id/ivContactItem2">

                <EditText
                    android:id="@+id/UsrprfAddr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:enabled="false"
                    tools:ignore="HardcodedText"
                    android:maxLines="4"
                    android:textColor="#212121"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


        <include layout="@layout/item_divider" />

        <!--location-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/ivContactItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:src="@android:drawable/ic_menu_compass" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/UsrprfLocL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="parallax"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ivContactItem3"
                android:layout_toEndOf="@+id/ivContactItem3">

                <EditText
                    android:id="@+id/UsrprfLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Latitude,Longitude"
                    android:enabled="false"
                    tools:ignore="HardcodedText"
                    android:textColor="#212121"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="none" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <include layout="@layout/item_divider" />



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>